<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SignupActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="45sp"
        android:background="@drawable/leftarrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="45sp"
        android:layout_marginTop="40sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edit_id"
            style="@style/signup_editText"
            android:layout_marginTop="30sp"
            android:hint="이름"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/text_id"
            style="@style/signup_textview"
            android:text="이미 사용중인 아이디입니다." />

        <EditText
            android:id="@+id/edit_email"
            style="@style/signup_editText"
            android:hint="이메일"
            android:maxLines="1"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/text_email"
            style="@style/signup_textview"
            android:text="올바른 이메일 주소를 입력하세요." />

        <EditText
            android:id="@+id/edit_password1"
            style="@style/signup_editText"
            android:hint="비밀번호"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/text_password1"
            style="@style/signup_textview"
            android:text="문자,숫자,특수기호포함 8자리 이상 20자리 이하" />

        <EditText
            android:id="@+id/edit_password2"
            style="@style/signup_editText"
            android:hint="비밀번호 재확인"
            android:maxLines="1"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/text_password2"
            style="@style/signup_textview"
            android:text="위 비밀번호와 같지 않습니다." />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="25sp"
            android:background="@drawable/editbtn_background"
            android:text="가입하기"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40sp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있으신가요?"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>



